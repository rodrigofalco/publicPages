---
interface Props {
  title: string;
  lang?: 'en' | 'es';
  showControls?: boolean;
}

const { title, lang = 'es', showControls = false } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Lato', 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #046cfc 0%, #15294b 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            min-width: 800px;
            box-sizing: border-box;
        }

        h1 {
            color: #15294b;
            text-align: center;
            margin-bottom: 10px;
            font-size: 2em;
            font-weight: 700;
            font-family: 'Montserrat', sans-serif;
        }

        .brand-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .brand-logo {
            margin-bottom: 10px;
        }

        .brand-logo img {
            height: 40px;
            width: auto;
        }

        .brand-tagline {
            font-size: 0.9em;
            color: #666;
            font-weight: 400;
        }

        .brand-accent {
            color: #f1870d;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            color: white;
            font-size: 0.9em;
        }

        .footer a {
            color: white;
            text-decoration: underline;
        }

        .controls {
            position: fixed;
            bottom: 30px;
            right: 30px;
            display: flex;
            gap: 10px;
            z-index: 1000;
        }

        :global(.control-btn) {
            background: linear-gradient(135deg, #046cfc 0%, #0052cc 100%);
            border: none;
            border-radius: 50px;
            padding: 12px 24px;
            cursor: pointer;
            font-size: 14px;
            color: white;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(4, 108, 252, 0.3);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        :global(.control-btn::before) {
            content: '↻';
            font-size: 18px;
            display: inline-block;
            transition: transform 0.3s ease;
        }

        :global(.control-btn:hover) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(4, 108, 252, 0.4);
        }

        :global(.control-btn:hover::before) {
            transform: rotate(-180deg);
        }

        :global(.control-btn:active) {
            transform: translateY(0);
            box-shadow: 0 2px 10px rgba(4, 108, 252, 0.3);
        }

        @media (max-width: 820px) {
            body {
                padding: 10px;
            }

            .container {
                padding: 20px;
                min-width: 100%;
            }

            h1 {
                font-size: 1.5em;
            }
        }
    </style>
    <slot name="head" />
</head>
<body>
    <div class="container">
        <div class="brand-header">
            <div class="brand-logo">
                <a href="https://patagonian.com" target="_blank">
                    <img src={`${baseUrl}/patagonian_logo_RGB_color-300x58.png`.replace('//', '/')} alt="Patagonian">
                </a>
            </div>
            <div class="brand-tagline">
                {lang === 'en'
                    ? <>Innovative digital solutions <span class="brand-accent">(AI, IoT, Data & more)</span></>
                    : <>Soluciones digitales innovadoras <span class="brand-accent">(AI, IoT, Data & más)</span></>
                }
            </div>
        </div>

        {showControls && (
            <div class="controls">
                <slot name="controls" />
            </div>
        )}

        <slot />
    </div>

    <div class="footer">
        <p>© Patagonian | <a href="https://patagonian.com" target="_blank">patagonian.com</a></p>
    </div>

    <slot name="scripts" />
</body>
</html>
